# Food Rescue Platform - Environment Variables
# Copy this file to .env and fill in the values

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/food_rescue_development
REDIS_URL=redis://localhost:6379/0

# Rails Configuration
RAILS_ENV=development
RAILS_LOG_LEVEL=debug
SECRET_KEY_BASE=your_secret_key_base_here
RAILS_SERVE_STATIC_FILES=true

# Rust Services URLs
LOCATION_SERVICE_URL=http://localhost:3001
INVENTORY_SERVICE_URL=http://localhost:3002
IMAGE_SERVICE_URL=http://localhost:3003

# External APIs
# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio SMS Notifications
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@foodrescue.app

# AWS S3 for Image Storage
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-west-2
S3_BUCKET=food-rescue-images-dev

# Cloudinary (Alternative to S3)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Maps and Location
MAPBOX_TOKEN=pk.your_mapbox_token
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_WS_URL=ws://localhost:3002
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn
DATADOG_API_KEY=your_datadog_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION_TIME=24h

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
MAX_FILES_PER_UPLOAD=5

# Business Configuration
DEFAULT_PICKUP_WINDOW_HOURS=2
MAX_ORDER_ITEMS=50
MIN_DISCOUNT_PERCENTAGE=10
MAX_DISCOUNT_PERCENTAGE=90

# Development/Testing
SEED_DATABASE=true
LOG_LEVEL=debug
ENABLE_CORS=true

# Production Only
# SSL_REDIRECT=true
# FORCE_SSL=true